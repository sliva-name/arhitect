# Database Configuration (PostgreSQL)
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret
DB_ROOT_PASSWORD=root

# User ID and Group ID for file permissions
USER_ID=1000
GROUP_ID=1000

# Environment: development or production
# Change to "production" for production deployment
ENVIRONMENT=development

# Production settings (only used when ENVIRONMENT=production)
# PROD_DOMAIN=yourdomain.com
# PROD_EMAIL=your-email@example.com

# Backup settings (only used in production)
# BACKUP_SCHEDULE=0 2 * * *  # Cron schedule (default: daily at 2 AM)
# BACKUP_RETENTION_DAYS=7    # Keep backups for N days (default: 7)
